<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Tank Toad</title>
    @Scripts.Render("~/bundles/modernizr")

    <link href="~/Content/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/animate.css" rel="stylesheet" />

    <link href="~/Content/css/Site.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/bootstrap-grid.min.css" rel="stylesheet" />
    <script src="~/Scripts/dataTables.js"></script>
    <script src="~/Scripts/dataTables.fixedColumns.min.js"></script>
    <script src="~/Scripts/bootstrap-notify.min.js"></script>
    <script src="~/Scripts/bootbox.js"></script>

    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

    <link href="~/Contents/bootstrap-datepicker.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap-datepicker.min.js"></script>

    <script src="~/Scripts/site/functions.js"></script>

    <script src="~/Scripts/js/API.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
        <a class="navbar-brand" href="/Home/Index">Tank Toad</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="dropdown-logs" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Logs</a>
                    <div class="dropdown-menu" aria-labelledby="dropdown-logs">
                        <a class="dropdown-item" href="/Logs/SMS">SMS</a>
                        <a class="dropdown-item" href="/Logs/Data">Data</a>
                        <a class="dropdown-item" href="/Logs/Diagnostics">Diagnostic</a>
                        <a class="dropdown-item" href="/Logs/DeviceAttributesLog">Device Attributes</a>
                    </div>
                </li>
                <li class="nav-item">
                        <a class="nav-link" href="/Settings/DeviceList">Device list</a>
                </li>
                <li class="nav-item">
                        <a class="nav-link" href="/Settings/DeviceSpecificConstants">Device-specific constants</a>
                </li>
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </nav>

    <main role="main">
        <div class="">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Meadowlark Solutions</p>
            </footer>
        </div>
    </main>

    @RenderSection("scripts", required: false)
</body>
</html>
